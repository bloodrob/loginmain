<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/txtimg"
    tools:context="com.example.akash.loginmain.SP_register">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="147dp"
        android:layout_marginStart="147dp"
        android:layout_marginTop="12dp"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:text="REGISTER" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView12"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="81dp"
        android:text="E-mail" />

    <EditText
        android:id="@+id/sp_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_alignTop="@+id/textView13"
        android:layout_alignLeft="@+id/sp_password"
        android:layout_alignStart="@+id/sp_password" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_alignBaseline="@+id/sp_password"
        android:layout_alignBottom="@+id/sp_password"
        android:layout_alignLeft="@+id/textView16"
        android:layout_alignStart="@+id/textView16" />

    <EditText
        android:id="@+id/sp_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType=""
        android:layout_below="@+id/sp_email"
        android:layout_alignLeft="@+id/sp_Rpassword"
        android:layout_alignStart="@+id/sp_Rpassword"
        android:layout_marginTop="19dp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retype"
        android:layout_alignBaseline="@+id/sp_Rpassword"
        android:layout_alignBottom="@+id/sp_Rpassword"
        android:layout_alignLeft="@+id/textView13"
        android:layout_alignStart="@+id/textView13" />

    <EditText
        android:id="@+id/sp_Rpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType=""
        android:layout_above="@+id/submit_sp"
        android:layout_alignLeft="@+id/textView12"
        android:layout_alignStart="@+id/textView12"
        android:layout_marginBottom="72dp" />

    <Button
        android:id="@+id/submit_sp"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginBottom="82dp"
        android:background="#006400"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:text="REGISTER"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/sp_Rpassword"
        android:layout_alignStart="@+id/sp_Rpassword" />

</RelativeLayout>
