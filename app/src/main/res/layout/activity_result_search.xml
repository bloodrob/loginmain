<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.akash.loginmain.ResultSearch">

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="114dp"
        android:text="show the result"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/client_name"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/submit"
        android:layout_alignStart="@+id/submit"
        android:layout_below="@+id/submit"
        android:layout_marginTop="77dp"
        android:text="name"
        android:layout_alignRight="@+id/submit"
        android:layout_alignEnd="@+id/submit" />

    <TextView
        android:id="@+id/client_address"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/client_name"
        android:layout_alignStart="@+id/client_name"
        android:layout_below="@+id/client_name"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="41dp"
        android:text="address" />

    <TextView
        android:id="@+id/client_mobile"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:layout_alignEnd="@+id/client_address"
        android:layout_alignRight="@+id/client_address"
        android:layout_below="@+id/client_address"
        android:layout_marginTop="64dp"
        android:text="mobile" />

    <TextView
        android:id="@+id/client_email"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:layout_alignEnd="@+id/client_mobile"
        android:layout_alignRight="@+id/client_mobile"
        android:layout_below="@+id/client_mobile"
        android:layout_marginTop="59dp"
        android:text="email" />

    <EditText
        android:id="@+id/a_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/client_name"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="67dp"
        android:layout_marginRight="67dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="type a name" />

    <Button
        android:id="@+id/listSrc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/a_name"
        android:layout_alignLeft="@+id/client_email"
        android:layout_alignStart="@+id/client_email"
        android:text="List search" />
</RelativeLayout>
