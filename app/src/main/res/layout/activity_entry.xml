<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.akash.loginmain.entry">

    <Button
        android:id="@+id/client"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:background="@drawable/entry_client"
        android:text="CLIENT ACCESS"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/service"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_alignLeft="@+id/client"
        android:layout_alignStart="@+id/client"
        android:layout_below="@+id/client"
        android:layout_marginTop="56dp"
        android:background="@drawable/entry_client"
        android:text="SEVICE PROVIDER ACCESS"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:text="search"
        android:layout_below="@+id/service"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
